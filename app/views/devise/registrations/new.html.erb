<h2 class="text-center mt-4 mb-4">Реєстрація</h2>

<%= form_for(resource, as: resource_name, url: registration_path(resource_name), html: { class: 'form-container' }) do |f| %>
  <%= render "devise/shared/error_messages", resource: resource %>
  
  <div class="row">
    <div class="col-md-4 mb-3"></div>
    <div class="col-md-4 mb-3">
      <div class="form-group mb-3">
        <%= f.label :email, class: 'form-label' %>
        <%= f.email_field :email, autofocus: true, autocomplete: "email", class: 'form-control' %>
      </div>

      <div class="form-group mb-3">
        <%= f.label :Пароль, class: 'form-label' %>
        <% if @minimum_password_length %>
          <small class="text-muted">(Мінімум <%= @minimum_password_length %> символів)</small>
        <% end %>
        <%= f.password_field :password, autocomplete: "new-password", class: 'form-control' %>
      </div>

      <div class="form-group mb-4">
        <%= f.label :Підтвердження_пароля, class: 'form-label' %>
        <%= f.password_field :password_confirmation, autocomplete: "new-password", class: 'form-control' %>
      </div>

      <div class="d-grid gap-2">
        <%= f.submit "Зареєструватися", class: 'btn btn-dark' %>
      </div>
    </div>
  </div>
<% end %>

<div class="text-center mt-3">
  <%= render "devise/shared/links" %>
</div>
